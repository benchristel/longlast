{
  "include": ["packages", "dev"],
  "compilerOptions": {
    "noEmit": true,
    "target": "es2022",
    "module": "nodenext",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "isolatedDeclarations": true,
    "skipLibCheck": true
  }
}
